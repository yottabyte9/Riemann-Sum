#include <iostream>
#include <cmath>
#include <string>

using namespace std;

double func_in(double x){
    return (x);
}

double increment_increase(double increment, double begin, double end){
    double sum = 0;
    for(double i=begin; i<=end; i+=increment){
        sum += func_in(i);
    }
    double factor = 1/increment;
    return sum/factor;
}

double ask_user(string prompt){
    string value_string;
    cout << prompt;
    cin >> value_string;
    double value = stod(value_string);
    return value;
}

int main()
{
    double increment = ask_user("increment: ");
    double start_v = ask_user("start: ");
    double end_v = ask_user("end: ");
    cout << "answer: " << increment_increase(increment, start_v, end_v);
    return 0;
}
